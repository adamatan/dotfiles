layout {
    pane split_direction="Vertical" {
        pane size=40 name="yazi" {
          name "yazi"
          command "~/.config/zellij/layouts/yazi-single.sh"
          args "open"
          close_on_exit false
        }
        pane name="helix" {
          command "hx"
        }
        pane split_direction="Horizontal" size=100 {
          pane name="shell" {}
        }
    }
    pane size=1 borderless=true {
        plugin location="compact-bar"
    }
}
